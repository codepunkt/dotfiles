# ============================================================================
# Homebrew Bundle File
# ============================================================================
# This file defines all packages, applications, and extensions to be installed
# Run: brew bundle install

# ----------------------------------------------------------------------------
# Development Tools
# ----------------------------------------------------------------------------
brew "act"              # Run GitHub Actions locally
brew "gh"               # GitHub CLI
brew "go"               # Go programming language
brew "neovim"           # Modern Vim fork
brew "railway"          # Railway CLI for deployments
brew "docker-compose"   # Container orchestration
brew "hadolint"         # Dockerfile linter
brew "cmake"            # Cross-platform build system
brew "mise"             # Polyglot runtime manager (asdf alternative)

# ----------------------------------------------------------------------------
# Modern CLI Replacements
# ----------------------------------------------------------------------------
brew "bat"              # Better cat with syntax highlighting
brew "eza"              # Better ls with colors and git integration
brew "fd"               # Better find
brew "ripgrep"          # Better grep (extremely fast)
brew "duf"              # Better df (disk usage)
brew "procs"            # Better ps (process viewer)
brew "btop"             # Better top (system monitor)
brew "gping"            # Ping with a graph

# ----------------------------------------------------------------------------
# CLI Utilities
# ----------------------------------------------------------------------------
brew "fzf"              # Fuzzy finder
brew "jq"               # JSON processor
brew "zoxide"           # Smart cd command
brew "tmux"             # Terminal multiplexer
brew "zsh"              # Shell
brew "thefuck"          # Auto-correct console commands
brew "tlrc"             # tldr pages client
brew "oh-my-posh"       # Prompt theme engine
brew "hyperfine"        # Command-line benchmarking
brew "scc"              # Code counter with complexity analysis

# ----------------------------------------------------------------------------
# Web & API Tools
# ----------------------------------------------------------------------------
brew "caddy"            # Web server with automatic HTTPS
